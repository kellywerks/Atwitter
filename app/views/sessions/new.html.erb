<%= content_for :title, "Login" %>

<h2>Atwitter Log In:</h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Submit", class: "btn" %>
<% end %>
